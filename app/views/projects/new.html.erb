<div class='page-header'>
  <h1>New project</h1>
</div>

<div class='row'>
  <div class='span12'>
	<%= render 'form' %>

	<%= link_to 'Back', projects_path, :class => 'btn' %>
  </div>
  <div class='span4'>
	  <h3 class='proposals'>Proposals <a href='<%= proposal_sync_url %>?redir=<%= request.fullpath %>' class='btn small' style='float: right;margin-top: 2px'>Synchronise</a></h3>
	  
	  <% unless @proposals.empty? then %>
	      <% @proposals.each do |proposal| %>
	      <p><a href='#' class='proposal-link'><%= proposal.title %></a>
	      <% if proposal.archived %>
	        <span class='label warning'>archived</span>
	      <% end %>
	      </p>
	      <% end %>
	    <% else %>
	      <p>No proposals</p>
	  <% end %>
  </div>
</div>

<script type='text/javascript'>
$(document).ready(function() {
	
	$('.proposal-link').click(function() {
		
		var text = $(this).text()

		$('#project_proposal_id').children().each(function() {
			
			if ($(this).text() == text) {
				$(this).attr('selected', 'selected')
			}
		})
	})
})
</script>